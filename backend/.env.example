# Django Configuration
SECRET_KEY=django-insecure-your-secret-key-change-in-production
DEBUG=True

# Allowed Hosts (comma-separated, no spaces)
# Development: localhost,127.0.0.1
# Production: yourdomain.com,*.up.railway.app
ALLOWED_HOSTS=localhost,127.0.0.1

# Google Gemini API (Get key from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# CORS Settings (comma-separated, no spaces)
# Add your frontend URLs here
# Development: http://localhost:5173,http://localhost:3000
# Production: https://your-frontend.vercel.app
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Database (optional, defaults to SQLite)
# For PostgreSQL on Railway/Render, uncomment and set:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379/1
